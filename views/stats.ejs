<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>PA Statistics</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>

<body class="bg-gray-50 p-6">
    <div class="max-w-3xl mx-auto">
        <h1 class="text-3xl font-bold mb-6">PA Approval/Denial Statistics</h1>

        <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
            <div>
                <label class="block mb-1 font-medium">Medication</label>
                <select id="filter-drug" class="w-full px-3 py-2 border rounded">
                    <option value="">All</option>
                </select>
            </div>
            <div>
                <label class="block mb-1 font-medium">Doctor</label>
                <select id="filter-doctor" class="w-full px-3 py-2 border rounded">
                    <option value="">All</option>
                </select>
            </div>
            <div>
                <label class="block mb-1 font-medium">Insurance</label>
                <select id="filter-insurance" class="w-full px-3 py-2 border rounded">
                    <option value="">All</option>
                </select>
            </div>
            <div>
                <label class="block mb-1 font-medium">Date range</label>
                <div class="flex space-x-2">
                    <input type="date" id="filter-start" class="w-1/2 px-3 py-2 border rounded">
                    <input type="date" id="filter-end" class="w-1/2 px-3 py-2 border rounded">
                </div>
            </div>
        </div>

        <button id="btn-refresh" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 mb-6">Refresh
            Chart</button>

        <div class="bg-white p-4 shadow rounded">
            <canvas id="statusChart"></canvas>
        </div>

        <script>window.API_BASE = '<%= apiBase %>';</script>
        <script src="/js/stats.js"></script>
    </div>
</body>

</html>